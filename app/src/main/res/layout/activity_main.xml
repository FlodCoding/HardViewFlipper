<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />


    <com.flod.hardviewflipper.HardEditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@null"
        android:hint="请输入密码"
        android:paddingBottom="@dimen/len_10"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="@dimen/len_10"
        android:text="55555"
        app:background="@drawable/selector_btn"
        app:btnPadding="10dp"
        app:btnSize="20dp"
        app:labelPaddingBottom="6dp"
        app:labelPaddingTop="@dimen/len_4"
        app:labelTextSize="@dimen/font_12"
        app:labelTranslationX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_btn"
        android:text="55454545450000000000000000000000000000"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>